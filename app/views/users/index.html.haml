%h1 Listing people

%p
  - if controller.action_name == 'index'
    = form_tag(current_checkin_users_path, :method => :get) do
      %button
        = submit_tag 'Show checkin people only', :class => 'submit'
  - else
    = link_to 'Show me all', users_path

%span.pagination
  = paginate @users

%div{:class => "row", :id => "people"}
  = render @users
  
