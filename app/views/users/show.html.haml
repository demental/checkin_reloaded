%div#person
  %div#img
    = avatar(@user)
  - if can? :manage, @user
    = render :partial => 'avatar'
  %p
    = @user.firstname
    = @user.lastname
    %br 
    = @user.nb_of_checkin_label
    %br
    - if can? :read, @user
      = @user.email
    - if @user.checkin?
      %br 
      = @user.checkin_label
      - if can? :manage, :all
        %br
        = @user.checkin_owners_label
  - if can? :read, @user
    %p
      %b Company:
      = @user.company
    %p
      %b Phone:
      = @user.phone
      %p
        %b API Key:
        = @user.authentication_token
  - if can? :update, @user
    = form_for(@user, :url => new_user_check_path(@user), :html => { :method => :get })  do |f|
      %button
        = f.submit 'Checkin', :class => 'submit'
    = link_to 'Edit Profile', edit_user_path(@user)
  - if can? :manage, :all
    %br
      = link_to 'Add Credits', add_tokens_user_tokens_path(@user)
  - if @user.me?(current_user) and @user.invitations.size > 0
    %div#invitations
      = render :partial => 'invitation', :collection => @user.invitations
  = link_to 'Back to people list', users_path
  
