#cartridge
  %h2 Sign up!
  = semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :validate => true) do |f|
    = devise_error_messages!
    = f.inputs do
      = f.input :email
    = f.commit_button :reset_password
  = render :partial => "devise/shared/links"
