#cartridge
  %h2 Change your password
  = semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, :validate => true) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    = f.inputs do
      = f.input :password
      = f.input :password_confirmation
    = f.commit_button :change_password
  = render :partial => "devise/shared/links"
