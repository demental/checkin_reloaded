#cartridge
  %h1 
    Editing account
  = semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :validate => true) do |f|
    = devise_error_messages!
    = f.inputs do
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
      = f.input :current_password
      = f.commit_button :edit_account
  %h3 Cancel my account
  %p
    Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
  = link_to "Back", :back
