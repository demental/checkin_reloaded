%html
  %head
    %title 
      = title
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    / = javascript_include_rpx(user_session_url)
    = csrf_meta_tag
    %body
      .container_24
        #header
          = link_to "releases notes", "/releasesnotes_fr.html" 
          %ul.hmenu
            = render 'devise/menu/login_items'
            = render 'devise/menu/registration_items'
            - if can? :manage, :all
              %li
                = link_to 'Send notifications', notifications_path
        #flash
          = render :partial => 'shared/flashes'
        #main-content
          = yield
        #footer
          = yield :footer